<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addactivityfragm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_light"
    tools:context="com.example.keepfit.Fab_AddActivityFr"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_alignParentTop="true"
        android:id="@+id/emptyline" />

    <TextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="italic"
        android:text="Add Activity:"
        android:textColor="@android:color/white"
        android:background="@color/colorBG"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emptyline"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptyline0"
        android:layout_below="@id/textView0" />


    <TextView
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance:"
        android:id="@+id/txtdist"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/emptyline0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/r_editText3"
        android:layout_toEndOf="@id/txtdist"
        android:layout_below="@id/emptyline0"
        android:hint="@string/setdist_cnt"
        android:textColorHint="@android:color/holo_blue_bright" />



    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Units:"
        android:id="@+id/txtunits"
        android:textColor="@color/colorAccent"
        android:layout_alignStart="@id/txtdist"
        android:layout_below="@id/r_editText3" />


    <Spinner
        android:id="@+id/unitssetspinner"
        android:background="@color/colorSpin"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignStart="@id/r_editText3"
        android:layout_alignEnd="@id/r_editText3"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@id/txtunits"
        android:layout_below="@id/r_editText3"
        android:entries="@array/set_units"
        android:textColorHint="@android:color/holo_blue_bright"
        android:prompt="@string/setsteps_title" />



    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginTop="100dp"
        android:background="@drawable/my_button"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/add_button"
        android:layout_below="@+id/r_editText3"
        />




</RelativeLayout>