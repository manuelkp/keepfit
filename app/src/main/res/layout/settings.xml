<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsfragm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_light"
    tools:context="com.example.keepfit.SettingsFr"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_alignParentTop="true"
        android:id="@+id/emptyline" />

    <TextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="italic"
        android:text="Settings:"
        android:textColor="@android:color/white"
        android:background="@color/colorBG"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emptyline"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptyline0"
        android:layout_below="@id/textView0" />



    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual/Auto:"
        android:textSize="18dp"
        android:id="@+id/txtmode"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="50dp"
        android:layout_below="@id/emptyline0" />


    <Switch
        android:id="@+id/switchmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@id/txtmode"
        android:layout_alignEnd="@id/textView0"
        android:layout_below="@+id/emptyline0"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/txtnotif"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications:"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/txtmode" />

    <Switch
        android:id="@+id/switchnot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@id/switchmode"
        android:layout_toEndOf="@id/txtnotif"
        android:layout_below="@+id/txtmode"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/txtgoaled"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Goals:"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/txtnotif" />

    <Switch
        android:id="@+id/switchgoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@id/switchmode"
        android:layout_toEndOf="@id/txtgoaled"
        android:layout_below="@+id/txtnotif"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/txttriggers"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Triggers:"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/txtgoaled" />

    <Switch
        android:id="@+id/switchtriggers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@id/switchmode"
        android:layout_toEndOf="@id/txttriggers"
        android:layout_below="@id/txtgoaled"
        android:layout_marginStart="10dp" />


    <Button
        android:id="@+id/settings_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginTop="40dp"
        android:background="@drawable/my_button"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@id/textView0"
        android:layout_below="@id/switchtriggers"
        />




</RelativeLayout>